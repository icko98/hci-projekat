                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Vacation" HorizontalAlignment="Left" Background="#FFA01818" Foreground="#FCF9C6"  Margin="153,176,0,0" VerticalAlignment="Top" Click="Button_Click_2" Height="110" Width="140">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Content="Appointment" HorizontalAlignment="Left" Foreground="#FCF9C6" Background="#EF9F9F" Margin="152,49,0,0" VerticalAlignment="Top" Height="110" Width="140" Click="Button_Click_3">
